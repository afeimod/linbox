<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Spinner
        android:id="@+id/SControllerIconType"
        style="@style/ComboBox"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:entries="@array/desktop_background_type_entries" />

    <com.termux.x11.controller.widget.ColorPickerView
        android:id="@+id/CPVControllerBackgroundColor"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:activityTypeCode="@integer/load_button_icon_code" />

    <com.termux.x11.controller.widget.ImagePickerView
        android:id="@+id/IPVControllerBackgroundImage"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:activityTypeCode="@integer/load_button_icon_code" />

</LinearLayout>
